<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Fragment.donghyuktest">




    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gallery_Btn3" />

    <TextView
        android:id="@+id/diaryTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView"
        android:background="@drawable/confirm_btn_round"
        />

    <EditText
        android:id="@+id/contextEditText"
        android:layout_width="0dp"
        android:layout_height="116dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="오늘의 옷을 미리 정해보세요"
        android:inputType="textMultiLine"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diaryTextView"
        android:background="@drawable/confirm_btn_round"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/contextEditText"

        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="@+id/contextEditText"
        app:layout_constraintTop_toTopOf="@+id/contextEditText"
        app:layout_constraintVertical_bias="0.562"
        android:background="@drawable/confirm_btn_round"/>



    <Button
        android:id="@+id/save_Btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:text="저장"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contextEditText"
        android:background="@drawable/confirm_btn_round"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/cha_Btn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="수정"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/save_Btn"
        app:layout_constraintEnd_toStartOf="@+id/del_Btn"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/confirm_btn_round"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/del_Btn"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="삭제"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/cha_Btn"
        app:layout_constraintEnd_toEndOf="@+id/save_Btn"
        android:background="@drawable/confirm_btn_round"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="102dp"
        android:src="@drawable/background_temp"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="459dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="@+id/contextEditText"
        app:layout_constraintBottom_toBottomOf="@+id/contextEditText"
        app:layout_constraintVertical_bias="0.562"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/confirm_btn_round"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="102dp"
        android:src="@drawable/background_temp"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="459dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="@+id/contextEditText"
        app:layout_constraintBottom_toBottomOf="@+id/contextEditText"
        app:layout_constraintVertical_bias="0.562"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        android:background="@drawable/confirm_btn_round"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="102dp"
        android:src="@drawable/background_temp"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="459dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="@+id/contextEditText"
        app:layout_constraintBottom_toBottomOf="@+id/contextEditText"
        app:layout_constraintVertical_bias="0.562"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        android:background="@drawable/confirm_btn_round"/>



    <Button
        android:id="@+id/gallery_Btn"
        android:layout_width="75dp"
        android:layout_height="53dp"
        android:text="상의 선택"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:textColor="@color/colorWhite"
        android:background="@drawable/confirm_btn_round"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/gallery_Btn2"
        android:layout_width="75dp"
        android:layout_height="53dp"
        android:text="하의 선택"
        app:layout_constraintStart_toEndOf="@+id/gallery_Btn"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:textColor="@color/colorWhite"
        android:background="@drawable/confirm_btn_round"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/gallery_Btn3"
        android:layout_width="75dp"
        android:layout_height="53dp"
        android:text="신발 선택"
        app:layout_constraintStart_toEndOf="@+id/gallery_Btn2"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:textColor="@color/colorWhite"
        android:background="@drawable/confirm_btn_round"
        android:textStyle="bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>