<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Classifier.DeepGalleryActivity">

    <ImageView
        android:id="@+id/deepimageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/confirm_btn_round"
        />

    <Button
        android:id="@+id/deepselectBtn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="갤러리에서 사진을 가져오기"
        app:layout_constraintTop_toBottomOf="@+id/deepimageView"
        app:layout_constraintBottom_toTopOf="@+id/deeptextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:background="@drawable/confirm_btn_round"
        />

    <Button
        android:id="@+id/deepnewButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="해당 사진 옮기기"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/deepselectBtn"
        app:layout_constraintBottom_toTopOf="@+id/deeptextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/confirm_btn_round"/>

    <TextView
        android:id="@+id/deeptextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        app:layout_constraintTop_toBottomOf="@+id/deepselectBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/confirm_btn_round"
        android:textStyle="bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>